            <tr class="tr-hover">
                <td><%=listUsers[i].id%></td>
                <td><%=listUsers[i].email%></td>
                <td><%=listUsers[i].name%></td>
                <td><%=listUsers[i].city%></td>
                <td>
                    <button style="background-color: greenyellow;">Edit</button>
                    <button style="background-color: red;">Delete</button>
                </td>
            </tr>
        <% } %> -->
        <!-- forEach -->
         <% listUsers.forEach(function(User, index) {%>
            <tr class="tr-hover">
                <td><%= index + 1%></td>
                <td><%= User.id %></td>
                <td><%= User.email%></td>
                <td><%= User.name%></td>
                <td><%= User.city%></td>
                <td class="dl-flex">
                    <button style="background-color: greenyellow;"><a href="/update/<%= User.id %>">Edit</a></button>
                    <form action="/delete-user/<%= User.id %>" method="POST">
                        <button style="background-color: red;">Delete</button>
                    </form>
                </td>
            </tr>
            
         <% }); %>
        </table>
    </div>
  
</body>
</html>