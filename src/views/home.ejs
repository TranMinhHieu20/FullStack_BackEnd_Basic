<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>HomePage</title>
</head>
<style>
    .table-container {
        padding: 15px 20px;
    }
    .title {
        font-size: 20px;
        font-weight: 600;
        padding-bottom: 10px;
    }
    table {
        border-collapse: collapse;
        width: 100%;
    }
    th, td {
        padding: 8px;
        text-align: left;
        border:1px solid #ddd
    }
    .tr-hover:hover {
        background-color: #ccc;
    }
    body a {
        text-decoration: none;
    }
</style>

<body>
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/create">Create user</a>
   
    </div>
    <div class="table-container">
        
        <div class="title">List Users:</div>
        <table>
            <tr>
                <th>STT</th>
                <th>Id</th>
                <th>Email</th>
                <th>Name</th>
                <th>City</th>
                <th>Actions</th>
            </tr>
        <!-- <%= JSON.stringify(listUsers) %> -->
